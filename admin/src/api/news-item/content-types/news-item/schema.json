{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "news-item",
    "pluralName": "news",
    "displayName": "News",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "previewImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "published": {
      "type": "date",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "isEvent": {
      "type": "boolean",
      "default": false
    },
    "eventDate": {
      "type": "date"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "topic": {
      "type": "text",
      "required": true
    },
    "articleText": {
      "type": "component",
      "repeatable": true,
      "component": "article-section.article-section"
    },
    "titleOfHelpfulFiles": {
      "type": "string"
    },
    "files": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    }
  }
}
